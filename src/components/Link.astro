---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
  underline?: boolean;
  [key: string]: any;
}

const { href, external, class: className, underline, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class:list={[
    underline &&
      "underline decoration-muted-foreground underline-offset-[3px] transition-[text-decoration-color] duration-300 ease-in-out hover:decoration-foreground",
    className,
  ]}
  {...rest}
>
  <slot />
</a>
