---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
  underline?: boolean;
  [key: string]: any;
}

const { href, external, class: className, underline, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class:list={[
    "transition-colors duration-300 ease-in-out",
    underline && "decoration-muted-foreground hover:decoration-foreground underline underline-offset-[3px]",
    className,
  ]}
  {...rest}
>
  <slot />
</a>
