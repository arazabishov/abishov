---
import { Icon } from "astro-icon/components";

export interface BreadcrumbItemType {
  href?: string;
  label: string;
  icon?: string;
}

interface Props {
  items: BreadcrumbItemType[];
}

const { items } = Astro.props;
---

<nav aria-label="breadcrumb">
  <ol class="text-muted-foreground flex flex-wrap items-center gap-1.5 text-sm break-words sm:gap-2.5">
    <li class="inline-flex items-center gap-1.5">
      <a href="/" class="hover:text-foreground transition-colors">
        <Icon name="lucide:home" class="size-4 shrink-0" />
      </a>
    </li>
    {
      items.map((item, index) => (
        <>
          <li role="presentation" aria-hidden="true" class="[&>svg]:size-3.5">
            <Icon name="lucide:chevron-right" class="size-3.5" />
          </li>
          <li class="inline-flex items-center gap-1.5">
            {index === items.length - 1 ? (
              <span
                role="link"
                aria-disabled="true"
                aria-current="page"
                class="text-foreground flex items-center gap-x-2 font-normal"
              >
                {item.icon && <Icon name={item.icon} class="size-4 shrink-0" />}
                <span>{item.label}</span>
              </span>
            ) : (
              <a href={item.href} class="hover:text-foreground flex items-center gap-x-2 transition-colors">
                {item.icon && <Icon name={item.icon} class="size-4 shrink-0" />}
                <span>{item.label}</span>
              </a>
            )}
          </li>
        </>
      ))
    }
  </ol>
</nav>
