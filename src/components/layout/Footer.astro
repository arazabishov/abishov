---
import { SOCIAL_LINKS } from "@/consts";
import Link from "@/components/ui/Link.astro";
import SocialIcons from "./SocialIcons.astro";
---

<footer
  class:list={[
    "mx-auto",
    "mb-8",
    "flex",
    "w-full",
    "max-w-3xl",
    "flex-col",
    "items-center",
    "justify-center",
    "gap-y-2",
    "px-4",
    "sm:mb-4",
    "sm:flex-row",
    "sm:justify-between",
  ]}
>
  <div class="flex flex-wrap items-center justify-center gap-x-2 text-center">
    <span class="text-muted-foreground text-sm">
      &copy; {new Date().getFullYear()} All rights reserved.
    </span>
    <div role="separator" aria-orientation="vertical" class="bg-border hidden h-4! h-full w-px shrink-0 sm:block"></div>
    <p class="text-muted-foreground text-sm">
      Made by <Link href="https://github.com/arazabishov" class="text-foreground" external underline>Araz Abishov</Link>
    </p>
  </div>
  <SocialIcons links={SOCIAL_LINKS} />
</footer>
