---
import Link from "@/components/ui/Link.astro";
import Logo from "@/components/ui/Logo.astro";
import ThemeToggle from "@/components/layout/ThemeToggle.astro";
import { NAV_LINKS, SITE } from "@/consts";
---

<div>
  <div class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3">
    <Link href="/" class="flex shrink-0 items-center justify-center gap-1">
      <Logo class="h-8 w-8" />
      <span class="hidden h-full text-lg leading-none font-medium min-[400px]:block">
        {SITE.title}
      </span>
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground capitalize transition-[color] duration-300"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <ThemeToggle transition:persist />
    </div>
  </div>
</div>
