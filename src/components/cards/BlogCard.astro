---
import Badge from "@/components/ui/Badge.astro";
import Link from "@/components/ui/Link.astro";
import { getPostReadingTime, formatDate } from "@/core/utils";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  entry: CollectionEntry<"blog">;
}

const { entry } = Astro.props;
const formattedDate = formatDate(entry.data.created);
const readTime = getPostReadingTime(entry);
const postUrl = `/${entry.collection}/${entry.id}`;
---

<div class="hover:bg-muted/50 rounded-xl border p-4 transition-[background-color] duration-300 ease-in-out">
  <div class="flex flex-col gap-4 sm:flex-row">
    {
      entry.data.image && (
        <Link href={postUrl} class="bg-muted w-full overflow-hidden rounded-lg sm:max-w-3xs sm:shrink-0">
          <Image
            src={entry.data.image}
            alt={entry.data.title}
            width={640}
            height={400}
            class="aspect-16/10 object-cover"
            quality="mid"
          />
        </Link>
      )
    }

    <div class="grow">
      <Link href={postUrl}>
        <h3 class="mb-1 text-lg font-medium">{entry.data.title}</h3>
        <p class="text-muted-foreground mb-2 text-sm">{entry.data.description}</p>
      </Link>

      <div class="text-muted-foreground mb-2 flex flex-wrap items-center gap-x-2 text-xs">
        <span>{formattedDate}</span>
        <div role="separator" aria-orientation="vertical" class="bg-border h-4! h-full w-px shrink-0"></div>
        <span>{readTime}</span>
      </div>

      {
        entry.data.tags && entry.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {entry.data.tags.map((tag) => (
              <Badge href={`/tags/${tag}`}>{tag}</Badge>
            ))}
          </div>
        )
      }
    </div>
  </div>
</div>
