---
interface Props {
  orientation?: "horizontal" | "vertical";
  class?: string;
}

const { orientation = "horizontal", class: className } = Astro.props;

const classes =
  orientation === "horizontal"
    ? "h-px w-full"
    : "h-full w-px";
---

<div
  role="separator"
  aria-orientation={orientation}
  class:list={["bg-border shrink-0", classes, className]}
/>
