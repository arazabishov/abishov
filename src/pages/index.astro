---
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/ui/Button.astro";
import BlogCard from "@/components/cards/BlogCard.astro";
import ProjectCard from "@/components/cards/ProjectCard.astro";
import { SITE } from "@/consts";
import { getRecentPosts, getRecentProjects } from "@/core/content";

const posts = await getRecentPosts(SITE.featuredCount);
const projects = await getRecentProjects(SITE.featuredCount);
---

<Layout title="Home" class="max-w-3xl">
  <!-- Intro Section -->
  <section class="space-y-4 rounded-lg border p-6">
    <h1 class="text-3xl font-medium">Heya, I'm Araz ðŸ‘‹</h1>
    <p class="text-muted-foreground">I work as a software engineer at Microsoft. I've been building mobile apps longer than I'd like to admit. On the side, I tinker with Rust, learning how machines learn, and arguing with LLMs until one of us gives up.</p>
  </section>

  <!-- Latest Posts Section -->
  <section class="space-y-4">
    <h2 class="text-xl font-medium">Latest posts</h2>
    <ul class="space-y-4">
      {
        posts.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Button href="/blog" variant="ghost" class="group">
        See all posts
        <span class="ml-1.5 transition-transform group-hover:translate-x-1">&rarr;</span>
      </Button>
    </div>
  </section>

  <!-- Recent Projects Section -->
  <section class="space-y-4">
    <h2 class="text-xl font-medium">Recent projects</h2>
    <div class="grid items-start gap-6 sm:grid-cols-2">
      {projects.map((project) => <ProjectCard project={project} />)}
    </div>
    <div class="flex justify-center">
      <Button href="/projects" variant="ghost" class="group">
        See all projects
        <span class="ml-1.5 transition-transform group-hover:translate-x-1">&rarr;</span>
      </Button>
    </div>
  </section>
</Layout>
