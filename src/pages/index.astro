---
import Layout from "@/layouts/Layout.astro";
import ButtonLink from "@/components/ui/ButtonLink.astro";
import BlogCard from "@/components/cards/BlogCard.astro";
import ProjectCard from "@/components/cards/ProjectCard.astro";
import { SITE } from "@/consts";
import { getRecentPosts, getRecentProjects } from "@/core/content";

const posts = await getRecentPosts(SITE.featuredCount);
const projects = await getRecentProjects(SITE.featuredCount);
---

<Layout title="Home" class="max-w-3xl">
  <!-- Intro Section -->
  <section class="space-y-4 rounded-lg border p-6">
    <h1 class="text-3xl font-medium">Hey, I'm Araz ðŸ‘‹</h1>
    <p class="text-muted-foreground">
      I'm a software engineer passionate about open source, Android development, and Rust. I work on building tools and
      systems that make developers' lives easier.
    </p>
    <p class="text-muted-foreground">
      Currently, I'm focused on mobile development and exploring the intersection of systems programming with modern
      application development.
    </p>
  </section>

  <!-- Latest Posts Section -->
  <section class="space-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="space-y-4">
      {
        posts.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <ButtonLink href="/blog" variant="ghost" class="group">
        See all posts
        <span class="ml-1.5 transition-transform group-hover:translate-x-1">&rarr;</span>
      </ButtonLink>
    </div>
  </section>

  <!-- Recent Projects Section -->
  <section class="space-y-4">
    <h2 class="text-2xl font-medium">Recent projects</h2>
    <ul class="space-y-4">
      {
        projects.map((project) => (
          <li>
            <ProjectCard project={project} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <ButtonLink href="/projects" variant="ghost" class="group">
        See all projects
        <span class="ml-1.5 transition-transform group-hover:translate-x-1">&rarr;</span>
      </ButtonLink>
    </div>
  </section>
</Layout>
