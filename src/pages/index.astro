---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Link from "@/components/Link.astro";
import BlogCard from "@/components/BlogCard.astro";
import { buttonVariants } from "@/components/ui/button";
import { Site } from "@/core/constants";

const FEATURED_POST_COUNT = 3;

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, FEATURED_POST_COUNT);
---

<Layout title={Site.title} description={Site.description} class="max-w-3xl">
  <!-- Intro Section -->
  <section class="rounded-lg border p-6 space-y-4">
    <h1 class="text-3xl font-medium">Hey, I'm Araz ðŸ‘‹</h1>
    <p class="text-muted-foreground">
      I'm a software engineer passionate about open source, Android development,
      and Rust. I work on building tools and systems that make developers' lives
      easier.
    </p>
    <p class="text-muted-foreground">
      Currently, I'm focused on mobile development and exploring the
      intersection of systems programming with modern application development.
    </p>
  </section>

  <!-- Latest Posts Section -->
  <section class="space-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="space-y-4">
      {
        posts.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: "ghost" }) + " group"}
      >
        See all posts
        <span class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
