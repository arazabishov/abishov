---
import Layout from "@/layouts/Layout.astro";
import Link from "@/components/Link.astro";
import BlogCard from "@/components/BlogCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import { SITE } from "@/core/constants";
import { getRecentPosts, getRecentProjects } from "@/core/data";

const posts = await getRecentPosts(SITE.featuredPostCount);
const projects = await getRecentProjects(SITE.featuredPostCount);

const ghostButtonClasses =
  "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all outline-none h-9 px-4 py-2 hover:bg-muted hover:text-foreground dark:hover:bg-muted/50 group";
---

<Layout title="Home" class="max-w-3xl">
  <!-- Intro Section -->
  <section class="rounded-lg border p-6 space-y-4">
    <h1 class="text-3xl font-medium">Hey, I'm Araz ðŸ‘‹</h1>
    <p class="text-muted-foreground">
      I'm a software engineer passionate about open source, Android development,
      and Rust. I work on building tools and systems that make developers' lives
      easier.
    </p>
    <p class="text-muted-foreground">
      Currently, I'm focused on mobile development and exploring the
      intersection of systems programming with modern application development.
    </p>
  </section>

  <!-- Latest Posts Section -->
  <section class="space-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="space-y-4">
      {
        posts.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={ghostButtonClasses}
      >
        See all posts
        <span class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>

  <!-- Recent Projects Section -->
  <section class="space-y-4">
    <h2 class="text-2xl font-medium">Recent projects</h2>
    <ul class="space-y-4">
      {
        projects.map((project) => (
          <li>
            <ProjectCard project={project} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/projects"
        class={ghostButtonClasses}
      >
        See all projects
        <span class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
