---
import Layout from "@/layouts/Layout.astro";
import PageHead from "@/components/PageHead.astro";
import Link from "@/components/Link.astro";
import { buttonVariants } from "@/components/ui/button";
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Page Not Found" noindex />
  <section class="flex flex-col items-center justify-center gap-6 py-20">
    <h1 class="text-6xl font-bold">404</h1>
    <p class="text-muted-foreground text-xl">Page not found</p>
    <p class="text-muted-foreground text-center max-w-md">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <Link href="/" class={buttonVariants({ variant: "outline" })}>
      Go back home
    </Link>
  </section>
</Layout>
